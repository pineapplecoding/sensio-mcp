{
  "name": "sensio-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Sensio Air indoor data API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:standalone": "tsc && cp dist/index-standalone.js dist/index.js",
    "build:supabase": "tsc && cp dist/index-supabase.js dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:standalone": "tsx watch src/index-standalone.ts",
    "dev:supabase": "tsx watch src/index-supabase.ts",
    "start": "node dist/index.js",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "node-cache": "^5.1.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
