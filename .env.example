# Sensio MCP Server Configuration
# Copy this file to .env and fill in your credentials

# Your Sensio API Key (get from https://sensio.co/settings)
SENSIO_API_KEY=your_sensio_api_key_here

# Optional user id (only needed if you run the Supabase-backed server variant)
# SENSIO_USER_ID=your_user_id

# Your device serial numbers (comma-separated, no spaces)
# Example: SA123,SA456
ALLOWED_DEVICE_SERIALS=YOUR_DEVICE_SERIAL

# Optional: Cache Configuration (in seconds)
CACHE_TTL_LATEST=15
CACHE_TTL_HISTORY=300
MAX_TIME_WINDOW_DAYS=30
